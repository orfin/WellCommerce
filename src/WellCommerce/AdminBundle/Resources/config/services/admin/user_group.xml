<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="user_group.manager.admin" class="WellCommerce\AdminBundle\Manager\Admin\UserGroupManager">
            <argument type="service" id="user_group.repository"/>
            <argument type="service" id="user_group.event_dispatcher"/>
            <argument type="service" id="user_group.factory"/>
            <argument type="service" id="user_group.form_builder.admin"/>
            <argument type="service" id="user_group.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        
        <service id="user_group.controller.admin" class="WellCommerce\AdminBundle\Controller\Admin\UserGroupController">
            <argument type="service" id="user_group.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="user_group.dataset.query_builder.admin" class="WellCommerce\AdminBundle\DataSet\Admin\UserGroupDataSetQueryBuilder" public="false">
            <argument type="service" id="user_group.repository"/>
        </service>

        <service id="user_group.dataset.admin" class="WellCommerce\AdminBundle\DataSet\Admin\UserGroupDataSet">
            <argument type="service" id="user_group.dataset.query_builder.admin"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="user_group.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="user_group.datagrid" class="WellCommerce\AdminBundle\DataGrid\UserGroupDataGrid">
            <argument key="identifier">user_group</argument>
            <argument type="service" id="user_group.dataset.admin"/>
            <argument type="service" id="user_group.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="user_group.form_builder.admin" class="WellCommerce\AdminBundle\Form\Admin\UserGroupFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="user_group.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
