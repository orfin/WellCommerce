<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="channel.manager.admin" class="WellCommerce\Bundle\CommonBundle\Manager\Admin\ChannelManager">
            <argument type="service" id="channel.repository"/>
            <argument type="service" id="channel.event_dispatcher"/>
            <argument type="service" id="channel.factory"/>
            <argument type="service" id="channel.form_builder"/>
            <argument type="service" id="channel.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        
        <service id="channel.controller.admin" class="WellCommerce\Bundle\CommonBundle\Controller\Admin\ChannelController">
            <argument type="service" id="channel.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="channel.repository" class="WellCommerce\Bundle\CommonBundle\Repository\ChannelRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceCommonBundle:Channel</argument>
        </service>

        <service id="channel.factory" class="WellCommerce\Bundle\CommonBundle\Factory\ChannelFactory"/>

        <service id="channel.event_dispatcher" class="WellCommerce\Bundle\CommonBundle\EventDispatcher\ChannelEventDispatcher">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="channel.dataset.query_builder" class="WellCommerce\Bundle\CommonBundle\DataSet\Admin\ChannelDataSetQueryBuilder" public="false">
            <argument type="service" id="channel.repository"/>
        </service>

        <service id="channel.dataset" class="WellCommerce\Bundle\CommonBundle\DataSet\Admin\ChannelDataSet">
            <argument type="service" id="channel.dataset.query_builder"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="channel.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="channel.datagrid" class="WellCommerce\Bundle\CommonBundle\DataGrid\ChannelDataGrid">
            <argument key="identifier">channel</argument>
            <argument type="service" id="channel.dataset"/>
            <argument type="service" id="channel.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="channel.form_builder" class="WellCommerce\Bundle\CommonBundle\Form\Admin\ChannelFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="channel.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
