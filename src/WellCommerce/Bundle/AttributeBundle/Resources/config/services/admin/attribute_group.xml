<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="attribute_group.manager.admin" class="WellCommerce\Bundle\AppBundle\Manager\Admin\AttributeGroupManager">
            <argument type="service" id="attribute_group.repository"/>
            <argument type="service" id="attribute_group.event_dispatcher"/>
            <argument type="service" id="attribute_group.factory"/>
            <argument type="service" id="attribute_group.form_builder"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="attribute_group.controller.admin" class="WellCommerce\Bundle\AppBundle\Controller\Admin\AttributeGroupController">
            <argument type="service" id="attribute_group.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="attribute_group.repository" class="WellCommerce\Bundle\AppBundle\Repository\AttributeGroupRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceAppBundle:Attribute\Group</argument>
        </service>

        <service id="attribute_group.factory" class="WellCommerce\Bundle\AppBundle\Factory\AttributeGroupFactory" />

        <service id="attribute_group.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="attribute_group.form_builder" class="WellCommerce\Bundle\AppBundle\Form\Admin\AttributeGroupFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="attribute_group.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

    </services>
</container>
