<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="attribute.controller.admin" class="WellCommerce\Bundle\AttributeBundle\Controller\Admin\AttributeController">
            <argument type="service" id="attribute.manager"/>
            <argument type="service" id="attribute.form_builder.admin"/>
            <argument type="service" id="attribute.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="attribute.form_builder.admin" class="WellCommerce\Bundle\AttributeBundle\Form\Admin\AttributeFormBuilder" parent="core.form_builder" />

        <service id="attribute.dataset.query_builder.admin" class="WellCommerce\Bundle\AttributeBundle\DataSet\Admin\AttributeDataSetQueryBuilder" public="false">
            <argument type="service" id="attribute.repository"/>
        </service>

        <service id="attribute.dataset.admin" class="WellCommerce\Bundle\AttributeBundle\DataSet\Admin\AttributeDataSet">
            <argument type="service" id="attribute.dataset.query_builder.admin"/>
            <tag name="dataset"/>
        </service>

        <service id="attribute.datagrid" class="WellCommerce\Bundle\AttributeBundle\DataGrid\AttributeDataGrid">
            <argument type="service" id="attribute.dataset.admin"/>
            <tag name="datagrid" alias="availability"/>
        </service>
    </services>
</container>
