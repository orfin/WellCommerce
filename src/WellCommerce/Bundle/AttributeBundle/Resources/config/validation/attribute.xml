<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\Bundle\AttributeBundle\Entity\Attribute\Group">
        <property name="translations">
            <constraint name="Valid">
                <option name="deep">true</option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Bundle\AttributeBundle\Entity\Attribute\GroupTranslation">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">attribute_group.error.name.not_blank</option>
            </constraint>
            <constraint name="NotNull">
                <option name="message">attribute_group.error.name.not_null</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
