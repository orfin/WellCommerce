<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="front.cart.index" path="/cart/index">
        <default key="_controller">cart.controller.front:indexAction</default>
        <option key="expose">true</option>
        <option key="allow_page_redirect">true</option>
    </route>

    <route id="front.cart.add" path="/cart/add/{id},{attribute},{quantity}">
        <default key="_controller">cart.controller.front:addAction</default>
        <default key="attribute">null</default>
        <default key="quantity">1</default>
        <option key="expose">true</option>
    </route>

    <route id="front.cart.edit" path="/cart/edit/{id},{quantity}">
        <default key="_controller">cart.controller.front:editAction</default>
        <option key="expose">true</option>
    </route>

    <route id="front.cart.delete" path="/cart/delete/{id}">
        <default key="_controller">cart.controller.front:deleteAction</default>
        <option key="expose">true</option>
    </route>
</routes>
