<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="product_status.manager.front" class="WellCommerce\Bundle\AppBundle\Manager\Front\ProductStatusManager">
            <argument type="service" id="product_status.repository"/>
            <argument type="service" id="product_status.event_dispatcher"/>
            <argument type="service" id="product_status.factory"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product_status.controller.front" class="WellCommerce\Bundle\AppBundle\Controller\Front\ProductStatusController">
            <argument type="service" id="product_status.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product_status.dataset.query_builder.front" class="WellCommerce\Bundle\AppBundle\DataSet\Front\ProductStatusDataSetQueryBuilder" public="false">
            <argument type="service" id="product_status.repository"/>
        </service>

        <service id="product_status.dataset.front" class="WellCommerce\Bundle\AppBundle\DataSet\Front\ProductStatusDataSet">
            <argument type="service" id="product_status.dataset.query_builder.front"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="product_status.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="product_status.context.front" class="WellCommerce\Bundle\AppBundle\Context\Front\ProductStatusContext"/>

        <service id="product_showcase.layout_box.controller" class="WellCommerce\Bundle\AppBundle\Controller\Box\ProductShowcaseBoxController">
            <argument type="service" id="product_status.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="product_status.layout_box.controller" class="WellCommerce\Bundle\AppBundle\Controller\Box\ProductStatusBoxController">
            <argument type="service" id="product_status.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
    </services>
</container>
