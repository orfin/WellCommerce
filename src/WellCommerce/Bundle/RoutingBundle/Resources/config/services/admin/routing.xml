<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="routing.manager" class="WellCommerce\Bundle\RoutingBundle\Manager\RoutingManager" parent="core.manager">
            <argument type="service" id="routing.repository"/>
            <argument type="service" id="routing.factory"/>
        </service>

        <service id="routing.controller.admin" class="WellCommerce\Bundle\RoutingBundle\Controller\Admin\RoutingController">
            <argument type="service" id="routing.manager"/>
            <argument type="service" id="routing.form_builder.admin"/>
            <argument type="service" id="routing.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="routing.dataset.query_builder.admin" class="WellCommerce\Bundle\RoutingBundle\DataSet\Admin\RoutingDataSetQueryBuilder" public="false">
            <argument type="service" id="routing.repository"/>
        </service>

        <service id="routing.dataset.admin" class="WellCommerce\Bundle\RoutingBundle\DataSet\Admin\RoutingDataSet" parent="core.dataset">
            <argument type="service" id="routing.dataset.query_builder.admin"/>
        </service>

        <service id="routing.datagrid" class="WellCommerce\Bundle\RoutingBundle\DataGrid\RoutingDataGrid" parent="core.datagrid">
            <argument key="identifier">routing</argument>
            <argument type="service" id="routing.dataset.admin"/>
        </service>

        <service id="routing.form_builder.admin" class="WellCommerce\Bundle\RoutingBundle\Form\Admin\RoutingFormBuilder" parent="core.form_builder" />
    </services>
</container>
