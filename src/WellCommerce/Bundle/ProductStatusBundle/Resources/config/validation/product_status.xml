<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\Bundle\ProductStatusBundle\Entity\ProductStatus">
        <property name="translations">
            <constraint name="Valid">
                <option name="deep">true</option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Bundle\ProductStatusBundle\Entity\ProductStatusTranslation">
        <property name="name">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
        <property name="slug">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
        <property name="cssClass">
            <constraint name="NotNull" />
        </property>
        <property name="meta">
            <constraint name="Valid">
                <option name="deep">true</option>
            </constraint>
        </property>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">name</option>
        </constraint>
        <constraint name="WellCommerce\Bundle\RoutingBundle\Doctrine\Validator\Constraints\UniqueEntity" />
    </class>
</constraint-mapping>
