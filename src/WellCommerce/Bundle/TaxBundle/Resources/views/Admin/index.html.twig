{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tax list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Value</th>
            <th>Createdat</th>
            <th>Updatedat</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_tax_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.value }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin.tax.show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin.tax.edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_tax_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
