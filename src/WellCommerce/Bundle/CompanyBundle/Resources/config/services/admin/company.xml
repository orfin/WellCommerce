<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="company.manager.admin" class="WellCommerce\Bundle\AppBundle\Manager\Admin\CompanyManager">
            <argument type="service" id="company.repository"/>
            <argument type="service" id="company.event_dispatcher"/>
            <argument type="service" id="company.factory"/>
            <argument type="service" id="company.form_builder.admin"/>
            <argument type="service" id="company.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        
        <service id="company.controller.admin" class="WellCommerce\Bundle\AppBundle\Controller\Admin\CompanyController">
            <argument type="service" id="company.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="company.dataset.query_builder.admin" class="WellCommerce\Bundle\AppBundle\DataSet\Admin\CompanyDataSetQueryBuilder" public="false">
            <argument type="service" id="company.repository"/>
        </service>

        <service id="company.dataset.admin" class="WellCommerce\Bundle\AppBundle\DataSet\Admin\CompanyDataSet">
            <argument type="service" id="company.dataset.query_builder.admin"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="company.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="company.datagrid" class="WellCommerce\Bundle\AppBundle\DataGrid\CompanyDataGrid">
            <argument key="identifier">company</argument>
            <argument type="service" id="company.dataset.admin"/>
            <argument type="service" id="company.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="company.form_builder.admin" class="WellCommerce\Bundle\AppBundle\Form\Admin\CompanyFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="company.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
