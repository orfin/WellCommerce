<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="currency.manager.front" class="WellCommerce\Bundle\IntlBundle\Manager\Front\CurrencyManager">
            <argument type="service" id="currency.repository"/>
            <argument type="service" id="currency.event_dispatcher"/>
            <argument type="service" id="currency.factory"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="currency.controller.front" class="WellCommerce\Bundle\IntlBundle\Controller\Front\CurrencyController">
            <argument type="service" id="currency.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="currency.dataset.query_builder.front" class="WellCommerce\Bundle\IntlBundle\DataSet\Front\CurrencyDataSetQueryBuilder" public="false">
            <argument type="service" id="currency.repository"/>
        </service>

        <service id="currency.dataset.front" class="WellCommerce\Bundle\IntlBundle\DataSet\Front\CurrencyDataSet">
            <argument type="service" id="currency.dataset.query_builder.front"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="currency.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="twig.extension.currency" class="WellCommerce\Bundle\IntlBundle\Twig\Extension\CurrencyExtension">
            <argument type="service" id="currency.helper"/>
            <argument type="service" id="currency.dataset.front"/>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
