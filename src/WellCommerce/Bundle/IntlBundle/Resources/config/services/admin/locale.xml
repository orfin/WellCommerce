<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="locale.manager.admin" class="WellCommerce\Bundle\IntlBundle\Manager\Admin\LocaleManager">
            <argument type="service" id="locale.repository"/>
            <argument type="service" id="locale.event_dispatcher"/>
            <argument type="service" id="locale.factory"/>
            <argument type="service" id="locale.form_builder.admin"/>
            <argument type="service" id="locale.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="locale.controller.admin" class="WellCommerce\Bundle\IntlBundle\Controller\Admin\LocaleController">
            <argument type="service" id="locale.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="locale.repository" class="WellCommerce\Bundle\IntlBundle\Repository\LocaleRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceIntlBundle:Locale</argument>
        </service>

        <service id="locale.dataset.query_builder.admin" class="WellCommerce\Bundle\IntlBundle\DataSet\Admin\LocaleDataSetQueryBuilder" public="false">
            <argument type="service" id="locale.repository"/>
        </service>

        <service id="locale.dataset.admin" class="WellCommerce\Bundle\IntlBundle\DataSet\Admin\LocaleDataSet">
            <argument type="service" id="locale.dataset.query_builder.admin"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="locale.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="locale.datagrid" class="WellCommerce\Bundle\IntlBundle\DataGrid\LocaleDataGrid">
            <argument key="identifier">locale</argument>
            <argument type="service" id="locale.dataset.admin"/>
            <argument type="service" id="locale.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="locale.form_builder.admin" class="WellCommerce\Bundle\IntlBundle\Form\Admin\LocaleFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="locale.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
