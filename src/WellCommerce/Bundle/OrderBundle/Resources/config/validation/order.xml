<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\Bundle\OrderBundle\Entity\Order">
        <property name="billingAddress">
            <constraint name="Valid">
                <option name="traverse">true</option>
            </constraint>
        </property>
        <property name="shippingAddress">
            <constraint name="Valid">
                <option name="traverse">true</option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Bundle\OrderBundle\Entity\OrderStatusHistory">
        <property name="comment">
            <constraint name="NotNull" />
        </property>
        <property name="orderStatus">
            <constraint name="NotNull" />
        </property>
    </class>
</constraint-mapping>
