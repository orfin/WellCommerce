<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="user.manager.admin" class="WellCommerce\Bundle\AppBundle\Manager\Admin\UserManager">
            <argument type="service" id="user.repository"/>
            <argument type="service" id="user.event_dispatcher"/>
            <argument type="service" id="user.factory"/>
            <argument type="service" id="user.form_builder.admin"/>
            <argument type="service" id="user.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        
        <service id="user.controller.admin" class="WellCommerce\Bundle\AppBundle\Controller\Admin\UserController">
            <argument type="service" id="user.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="user.dataset.query_builder.admin" class="WellCommerce\Bundle\AppBundle\DataSet\Admin\UserDataSetQueryBuilder" public="false">
            <argument type="service" id="user.repository"/>
        </service>

        <service id="user.dataset.admin" class="WellCommerce\Bundle\AppBundle\DataSet\Admin\UserDataSet">
            <argument type="service" id="user.dataset.query_builder.admin"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="user.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="user.datagrid" class="WellCommerce\Bundle\AppBundle\DataGrid\UserDataGrid">
            <argument key="identifier">user</argument>
            <argument type="service" id="user.dataset.admin"/>
            <argument type="service" id="user.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="user.form_builder.admin" class="WellCommerce\Bundle\AppBundle\Form\Admin\UserFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="user.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="user_login.form_builder" class="WellCommerce\Bundle\AppBundle\Form\Admin\UserLoginFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="user.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
