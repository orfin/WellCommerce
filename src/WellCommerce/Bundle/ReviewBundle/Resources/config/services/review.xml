<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/review.xml"/>
        <import resource="front/review.xml"/>
    </imports>

    <services>
        <service id="review.manager" class="WellCommerce\Bundle\ReviewBundle\Manager\ReviewManager" parent="core.manager">
            <argument type="service" id="review.repository"/>
            <argument type="service" id="review.factory"/>
        </service>

        <service id="twig.extension.review" class="WellCommerce\Bundle\ReviewBundle\Twig\Extension\ReviewExtension">
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
