<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/dictionary.xml"/>
    </imports>

    <services>
        <service id="dictionary.repository" class="WellCommerce\Bundle\DictionaryBundle\Repository\DictionaryRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceDictionaryBundle:Dictionary</argument>
        </service>

        <service id="dictionary.factory" class="WellCommerce\Bundle\DictionaryBundle\Factory\DictionaryFactory" />

        <service id="dictionary.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="package.command.purge.translations" class="WellCommerce\Bundle\DictionaryBundle\Command\PurgeTranslationsCommand">
            <tag name="console.command"/>
        </service>
    </services>
</container>
