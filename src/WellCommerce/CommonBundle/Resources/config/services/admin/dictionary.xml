<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="dictionary.manager.admin" class="WellCommerce\AppBundle\Manager\Admin\DictionaryManager">
            <argument type="service" id="dictionary.repository"/>
            <argument type="service" id="dictionary.event_dispatcher"/>
            <argument type="service" id="dictionary.factory"/>
            <argument type="service" id="dictionary.form_builder.admin"/>
            <argument type="service" id="dictionary.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="dictionary.controller.admin" class="WellCommerce\AppBundle\Controller\Admin\DictionaryController">
            <argument type="service" id="dictionary.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="dictionary.dataset.query_builder.admin" class="WellCommerce\AppBundle\DataSet\Admin\DictionaryDataSetQueryBuilder" public="false">
            <argument type="service" id="dictionary.repository"/>
        </service>

        <service id="dictionary.dataset.admin" class="WellCommerce\AppBundle\DataSet\Admin\DictionaryDataSet">
            <argument type="service" id="dictionary.dataset.query_builder.admin"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="dictionary.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="dictionary.datagrid" class="WellCommerce\AppBundle\DataGrid\DictionaryDataGrid">
            <argument key="identifier">dictionary</argument>
            <argument type="service" id="dictionary.dataset.admin"/>
            <argument type="service" id="dictionary.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="dictionary.form_builder.admin" class="WellCommerce\AppBundle\Form\Admin\DictionaryFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="dictionary.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
