<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="tax.manager.admin" class="WellCommerce\CommonBundle\Manager\Admin\TaxManager">
            <argument type="service" id="tax.repository"/>
            <argument type="service" id="tax.event_dispatcher"/>
            <argument type="service" id="tax.factory"/>
            <argument type="service" id="tax.form_builder.admin"/>
            <argument type="service" id="tax.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        
        <service id="tax.controller.admin" class="WellCommerce\CommonBundle\Controller\Admin\TaxController">
            <argument type="service" id="tax.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="tax.dataset.query_builder.admin" class="WellCommerce\CommonBundle\DataSet\Admin\TaxDataSetQueryBuilder" public="false">
            <argument type="service" id="tax.repository"/>
        </service>

        <service id="tax.dataset.admin" class="WellCommerce\CommonBundle\DataSet\Admin\TaxDataSet">
            <argument type="service" id="tax.dataset.query_builder.admin"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="tax.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="tax.datagrid" class="WellCommerce\CommonBundle\DataGrid\TaxDataGrid">
            <argument key="identifier">tax</argument>
            <argument type="service" id="tax.dataset.admin"/>
            <argument type="service" id="tax.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="tax.form_builder.admin" class="WellCommerce\CommonBundle\Form\Admin\TaxFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="tax.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="twig.extension.tax" class="WellCommerce\CommonBundle\Twig\Extension\TaxExtension">
            <argument type="service" id="tax.dataset.admin"/>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
