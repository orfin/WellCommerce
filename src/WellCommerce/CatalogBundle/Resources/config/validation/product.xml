<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\CatalogBundle\Entity\Product">
        <property name="translations">
            <constraint name="Valid">
                <option name="deep">true</option>
            </constraint>
        </property>
        <property name="sellPrice">
            <constraint name="Valid">
                <option name="deep">true</option>
            </constraint>
        </property>
        <property name="dimension">
            <constraint name="Valid">
                <option name="deep">true</option>
            </constraint>
        </property>
        <property name="sku">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
        <property name="buyPrice">
            <constraint name="Valid">
                <option name="deep">true</option>
            </constraint>
        </property>
        <property name="sellPrice">
            <constraint name="Valid">
                <option name="deep">true</option>
            </constraint>
        </property>
        <property name="stock">
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
            <constraint name="NotBlank" />
        </property>
        <property name="weight">
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
            <constraint name="NotBlank" />
        </property>
        <property name="packageSize">
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
            <constraint name="NotBlank" />
        </property>
    </class>

    <class name="WellCommerce\CatalogBundle\Entity\ProductTranslation">
        <property name="name">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
        <property name="slug">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">slug</option>
        </constraint>
    </class>

    <class name="WellCommerce\CatalogBundle\Entity\ProductStatus">
        <property name="translations">
            <constraint name="Valid">
                <option name="deep">true</option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\CatalogBundle\Entity\ProductReview">
        <property name="nick">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
        <property name="rating">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
            <constraint name="Range">
                <option name="min">0</option>
                <option name="max">5</option>
            </constraint>
        </property>
        <property name="review">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
    </class>

    <class name="WellCommerce\CatalogBundle\Entity\ProductStatusTranslation">
        <property name="name">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
        <property name="slug">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">slug</option>
        </constraint>
    </class>
</constraint-mapping>
