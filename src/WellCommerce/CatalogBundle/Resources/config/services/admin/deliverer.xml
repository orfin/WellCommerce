<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="deliverer.manager.admin" class="WellCommerce\CatalogBundle\Manager\Admin\DelivererManager">
            <argument type="service" id="deliverer.repository"/>
            <argument type="service" id="deliverer.event_dispatcher"/>
            <argument type="service" id="deliverer.factory"/>
            <argument type="service" id="deliverer.form_builder.admin"/>
            <argument type="service" id="deliverer.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        
        <service id="deliverer.controller.admin" class="WellCommerce\CatalogBundle\Controller\Admin\DelivererController">
            <argument type="service" id="deliverer.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="deliverer.dataset.query_builder.admin" class="WellCommerce\CatalogBundle\DataSet\Admin\DelivererDataSetQueryBuilder" public="false">
            <argument type="service" id="deliverer.repository"/>
        </service>

        <service id="deliverer.dataset.admin" class="WellCommerce\CatalogBundle\DataSet\Admin\DelivererDataSet">
            <argument type="service" id="deliverer.dataset.query_builder.admin"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="deliverer.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="deliverer.datagrid" class="WellCommerce\CatalogBundle\DataGrid\DelivererDataGrid">
            <argument key="identifier">deliverer</argument>
            <argument type="service" id="deliverer.dataset.admin"/>
            <argument type="service" id="deliverer.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="deliverer.form_builder.admin" class="WellCommerce\CatalogBundle\Form\Admin\DelivererFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="deliverer.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
