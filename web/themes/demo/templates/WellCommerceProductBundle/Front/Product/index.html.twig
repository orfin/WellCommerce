            <div class="col-lg-12 box product">
                <div class="alert alert-info text-center" role="alert">This product is temporarily unavailable, but you
                    can make order. Delivery time is 4-6 days.
                </div>

                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 gallery">
                        <div class="row">
                            <!-- main photo -->
                            <div class="col-lg-12 col-md-12 col-sm-12 main-photo">
                                <a data-toggle="modal" href="#product-gallery">
                                    <img src="{{ image(product.getMainPhoto().getPath(), 'medium') }}" class="img-thumbnail img-responsive" alt="Apple iPhone 6">
                                </a>
                            </div>
                            <!-- main photo -->

                            <!-- additional photos -->
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="row">
                                    {% for photo in product.getAdditionalPhotos() %}
                                    <div class="col-lg-3 col-md-3 col-sm-2 col-xs-3 prod-thumbnail">
                                        <img src="{{ image(photo.getPath(), 'small') }}" class="img-thumbnail img-responsive" alt="Apple iPhone 6">
                                    </div>
